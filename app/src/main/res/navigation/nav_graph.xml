<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/training_nav">


    <navigation android:id="@+id/login_nav"
        app:startDestination="@id/letsStartFragment">
        <fragment
            android:id="@+id/letsStartFragment"
            android:name="com.example.eworkout.letsstart.LetsStartFragment"
            android:label="fragment_lets_start"
            tools:layout="@layout/fragment_lets_start">
            <action
                android:id="@+id/action_letsStartFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.eworkout.login.view.LoginFragment"
            android:label="LoginFragment">
            <action
                android:id="@+id/action_loginFragment_to_signupFragment"
                app:destination="@id/signupFragment" />
            <action
                android:id="@+id/action_loginFragment_to_trainingFragment"
                app:destination="@id/training_nav"
                app:popUpTo="@id/trainingFragment" />
        </fragment>
        <fragment
            android:id="@+id/signupFragment"
            android:name="com.example.eworkout.signup.view.SignupFragment"
            android:label="fragment_signup"
            tools:layout="@layout/fragment_signup">
            <action
                android:id="@+id/action_signupFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
            <action
                android:id="@+id/action_signupFragment_to_trainingFragment"
                app:destination="@id/training_nav"
                app:popUpTo="@id/trainingFragment"/>
        </fragment>
    </navigation>
    <navigation android:id="@+id/training_nav"
        app:startDestination="@id/workoutDetail1">
        <fragment
            android:id="@+id/workoutDetail2"
            android:name="com.example.eworkout.training.view.FragmentWorkoutDetail2"
            android:label="fragment_workout_detail2"
            tools:layout="@layout/fragment_workout_detail2">
            <action
                android:id="@+id/action_workoutDetail2_to_workoutDetail1"
                app:destination="@id/workoutDetail1" />
        </fragment>
        <fragment
            android:id="@+id/fragmentWorkoutReady"
            android:name="com.example.eworkout.training.view.FragmentWorkoutReady"
            android:label="FragmentWorkoutReady" >
            <action
                android:id="@+id/action_fragmentWorkoutReady_to_workoutStart1"
                app:destination="@id/workoutStart1" />
        </fragment>
        <fragment
            android:id="@+id/workoutDetail1"
            android:name="com.example.eworkout.training.view.FragmentWorkoutDetail1"
            android:label="WorkoutDetail1">
            <action
                android:id="@+id/action_workoutDetail1_to_workoutDetail2"
                app:destination="@id/workoutDetail2" />
            <action
                android:id="@+id/action_workoutDetail1_to_fragmentWorkoutReady"
                app:destination="@id/fragmentWorkoutReady" />
        </fragment>
        <fragment
            android:id="@+id/trainingFragment"
            android:name="com.example.eworkout.training.view.TrainingFragment"
            android:label="fragment_training"
            tools:layout="@layout/fragment_training" />
        <fragment
            android:id="@+id/workoutStart1"
            android:name="com.example.eworkout.training.view.FragmentWorkoutStart1"
            android:label="WorkoutStart1" />
    </navigation>


</navigation>