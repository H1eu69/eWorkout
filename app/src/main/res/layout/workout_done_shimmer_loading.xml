<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.eworkout.training.viewmodel.Workout1ViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNavigateUp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="28.8dp"
                android:layout_marginTop="57.6dp"
                android:background="@drawable/btn_navigate_up_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/background_imageview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28.8dp"
                android:src="@drawable/trophy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btnNavigateUp"
                app:layout_constraintTop_toBottomOf="@+id/btnNavigateUp" />

            <TextView
                android:id="@+id/textView_congrats1"
                style="@style/TextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/background_imageview1"
                app:layout_constraintStart_toStartOf="@+id/background_imageview1"
                app:layout_constraintTop_toBottomOf="@+id/background_imageview1" />

            <TextView
                android:id="@+id/textView_num_exercises1"
                style="@style/TextView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/textView_exercises1"
                app:layout_constraintStart_toStartOf="@+id/textView_exercises1"
                app:layout_constraintTop_toBottomOf="@+id/textView_congrats1" />

            <TextView
                android:id="@+id/textView_exercises1"
                style="@style/TextView1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                app:layout_constraintStart_toStartOf="@+id/background_imageview1"
                app:layout_constraintTop_toBottomOf="@+id/textView_num_exercises1" />

            <TextView
                android:id="@+id/textView_num_kcal1"
                style="@style/TextView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/textView_kcal1"
                app:layout_constraintStart_toStartOf="@+id/textView_kcal1"
                app:layout_constraintTop_toTopOf="@+id/textView_num_exercises1" />

            <TextView
                android:id="@+id/textView_kcal1"
                style="@style/TextView10"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/textView_congrats1"
                app:layout_constraintStart_toStartOf="@+id/textView_congrats1"
                app:layout_constraintTop_toBottomOf="@+id/textView_num_kcal1" />

            <TextView
                android:id="@+id/textView_num_duration1"
                style="@style/TextView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/textView_duration1"
                app:layout_constraintStart_toStartOf="@+id/textView_duration1"
                app:layout_constraintTop_toTopOf="@+id/textView_num_kcal1" />

            <TextView
                android:id="@+id/textView_duration1"
                style="@style/TextView1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                app:layout_constraintEnd_toEndOf="@+id/background_imageview1"
                app:layout_constraintTop_toBottomOf="@+id/textView_num_duration1" />

            <TextView
                android:id="@+id/textView_do_it_again1"
                style="@style/TextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="DO IT AGAIN"
                app:layout_constraintStart_toStartOf="@+id/background_imageview1"
                app:layout_constraintTop_toBottomOf="@+id/textView_exercises1" />

            <TextView
                android:id="@+id/textView_next1"
                style="@style/TextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="NEXT"
                app:layout_constraintEnd_toEndOf="@+id/background_imageview1"
                app:layout_constraintTop_toBottomOf="@+id/textView_exercises1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/left_right_top_corner_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView_i_feel1"
                style="@style/TextView4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28.8dp"
                android:layout_marginTop="28.8dp"
                android:background="@drawable/loading_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_easy1"
                style="@style/TextView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.8dp"
                android:background="@drawable/loading_background"
                app:layout_constraintStart_toStartOf="@+id/textView_i_feel1"
                app:layout_constraintTop_toBottomOf="@+id/textView_i_feel1" />

            <TextView
                android:id="@+id/textView_hard1"
                style="@style/TextView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/loading_background"
                android:layout_marginEnd="28.8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView_easy1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView_easy1" />

            <TextView
                android:id="@+id/radioGroup1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:background="@drawable/loading_background"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toTopOf="@+id/btn_start1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_easy1"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_start1"
                style="@style/Button3"
                android:layout_marginBottom="40dp"
                android:background="@drawable/loading_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>