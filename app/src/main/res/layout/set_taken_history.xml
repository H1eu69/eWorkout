<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/radius_shape">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background_history"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        android:background="@drawable/ellipse"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Set_imageView_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="@id/background_history"
        app:layout_constraintTop_toTopOf="@id/background_history"
        app:layout_constraintBottom_toBottomOf="@id/background_history"
        app:layout_constraintStart_toStartOf="@id/background_history"/>

    <TextView
        android:id="@+id/textView_SetName_History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="FullBody Workout"
        style="@style/TextView1"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/background_history"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_TotalKCAL_History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_SetName_History"
        app:layout_constraintStart_toEndOf="@+id/background_history"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:text="2"
        style="@style/TextView2"/>

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView_TotalKCAL_History"
        app:layout_constraintEnd_toEndOf="@+id/textView_TotalKCAL_History"
        app:layout_constraintTop_toBottomOf="@+id/textView_TotalKCAL_History"
        android:text="@string/exercises"/>

    <TextView
        android:id="@+id/texView_Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:text="32"
        style="@style/TextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_TotalKCAL_History"
        app:layout_constraintTop_toBottomOf="@+id/textView_SetName_History" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/texView_Duration"
        app:layout_constraintEnd_toEndOf="@+id/texView_Duration"
        app:layout_constraintTop_toBottomOf="@+id/texView_Duration"
        android:text="Mins"
        style="@style/TextView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>